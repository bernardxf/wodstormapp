#financeiro
	.titulo
		&:after
			content '\e60f'
		&.mov
			border none
			border-top 1px solid #EEEEEE
			clear both
			margin 0
	.carousel
		display block
		margin 20px auto 50px
		text-align center
		width 260px
		.seta-esq
		.seta-dir
			display inline-block
			height 22px
			position relative
			top 3px
			width 11px
			&:after
				color #A9A9AD
				font-family icomoon
				font-size 22px
				position: absolute
				top 0
				right 0
		.seta-esq:after
			content '\e61c'
		.seta-dir:after
			content '\e61b'
		.mes
			display inline-block
			font-size 23px
			width 235px
	.balanco
		display block
		float left
		margin 0px 70px 30px
		width 350px
		.tit
			border-bottom 7px solid #353535
			color #444444
			display block
			font-size 16px
			text-align center
		ul
			display block
			width 350px
			li
				border-top 1px solid #EEE
				display block
				float left
				padding 5px 10px
				width 330px
				.texto
					display block
					float left
					font-size 14px
					margin 3px 0px
					padding-left 25px
					position relative
					&:after
						color #ddd
						display block
						font-family icomoon
						font-size 16px
						height 16px
						left 0
						position absolute
						top 3px
						width 16px
				.valor
					display block
					float right
					font-family Lato-Light
					font-size 22px
				&:first-child
					border none
				&.entrada
					.texto:after
						content '\e60d'
					.valor
						color #00BC8F
				&.saida
					.texto:after
						content '\e618'
					.valor
						color #FF7466
				&.resultado
					.texto
						margin 9px 0
						&:after
							content '\e608'
					.valor
						font-size 32px










